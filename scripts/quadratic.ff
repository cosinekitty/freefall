// quadratic.ff - Derivation of the quadratic formula.

var x, a, b, c: complex;
a != 0;
a*x^2 + b*x + c = 0;

#-c;
simp(#);

#/a;
simp(#);
distrib(#, 11, 2);
simp(#);

// Complete the square.
# + (b/(2*a))^2;
factor(#);

# * (4*a^2);
distrib(#,33,18);
simp(#);
sqrt(#);
#/(2*a);
simp(#);
# - b/(2*a);
inject(#,18,factor);
simp(#);
save "quadratic.html";
